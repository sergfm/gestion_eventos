<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gestion_eventos</title>

    <!-- Estilos básicos y específicos de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestion_eventos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-styles.css" asp-append-version="true" />

    <!-- Estilos específicos para la pantalla de inicio de sesión -->
    @if (ViewData["Title"]?.ToString() == "Inicio de Sesión")
    {
        <link rel="stylesheet" href="~/css/login-styles.css" asp-append-version="true" />
    }
    <!-- Estilos específicos para el dashboard cuando el usuario está autenticado -->
    @if (Context.Session.GetString("UserId") != null)
    {
        <link rel="stylesheet" href="~/css/dashboard-styles.css" asp-append-version="true" />
    }
</head>
<body>
    <header>
        <!-- Navbar solo se muestra si el usuario está autenticado -->
        @if (Context.Session.GetString("UserId") != null)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">gestion_eventos</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Events" asp-action="Index">Eventos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="People" asp-action="Index">Personas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Tickets" asp-action="Index">Entradas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Attendances" asp-action="Index">Asistencia</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Snacks" asp-action="Index">Snacks</a>
                                </li>
                            }
                            @if (Context.Session.GetString("Role") == "Cliente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Eventos">Eventos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="MisEventos">Mis Eventos</a>
                                </li>
                            }
                            @if (Context.Session.GetString("Role") == "Vendedor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Ventas">Ventas</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            <!-- Ícono del carrito -->
                            @if (Context.Session.GetString("Role") == "Cliente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link position-relative d-flex align-items-center" asp-controller="Home" asp-action="Carrito" title="Carrito">
                                        <img src="https://cdn-icons-png.flaticon.com/512/126/126083.png" alt="Carrito" style="width: 24px; height: 24px;">
                                        <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            0
                                        </span>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-light d-flex align-items-center" asp-controller="Auth" asp-action="Logout" title="Cerrar sesión">
                                    <img src="https://cdn.icon-icons.com/icons2/1812/PNG/512/4213459-common-door-exit-logout-out-signout_115411.png" alt="Cerrar sesión" style="width: 24px; height: 24px;">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts de JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script para actualizar el carrito dinámicamente -->
    <script>
        $(document).ready(function () {
            function actualizarCarrito() {
                $.get("@Url.Action("ObtenerCantidadCarrito", "Home")", function (data) {
                    $("#cart-count").text(data);
                });
            }

            // Actualiza el carrito al cargar la página
            actualizarCarrito();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
