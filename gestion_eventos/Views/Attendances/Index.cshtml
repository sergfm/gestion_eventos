@model IEnumerable<gestion_eventos.Models.Attendance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsPresent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPresent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.PersonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AttendanceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AttendanceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AttendanceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="text-align: right; margin-top: 20px;">
    <form asp-action="DownloadReport" method="post">
        <button type="submit" class="btn btn-primary">Descargar reporte</button>
    </form>
</div>
