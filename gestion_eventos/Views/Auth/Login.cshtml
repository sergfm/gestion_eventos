@model gestion_eventos.Models.UserLoginViewModel

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="login-container">
    <div class="login-box">
        <h2>Bienvenido</h2>

        <!-- Mensaje de error cuando las credenciales son incorrectas -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                Nombre de usuario o contraseña incorrectos.
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Nombre de usuario</label>
                <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required />
            </div>
            <button type="submit" class="btn-login">Iniciar Sesión</button>
            <p class="register-link">¿Nuevo aquí? <a href="@Url.Action("Register", "Auth")">Regístrate</a></p>
        </form>
    </div>
</div>
