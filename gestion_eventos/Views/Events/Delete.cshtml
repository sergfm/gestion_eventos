@model gestion_eventos.Models.Event

@{
    ViewData["Title"] = "Eliminar Evento";
}

<h1>Eliminar Evento</h1>

<h3>¿Está seguro que desea eliminar este evento?</h3>
<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date</dd>

        <dt class="col-sm-2">Ubicación</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Tickets Disponibles</dt>
        <dd class="col-sm-10">@Model.AvailableTickets</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.EventId" method="post">
    <input type="hidden" asp-for="EventId" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
